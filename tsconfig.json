{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client", "jest", "@types/node", "vue"],
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "store/*": ["src/store/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/test/**",
    "**/tests/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
